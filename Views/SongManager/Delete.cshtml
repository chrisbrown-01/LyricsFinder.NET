@model Song

<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="pl-3">Delete Song From Database</h2>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group row">
                    <div class="col-md-2">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-md-10">
                        <input asp-for="Name" disabled class="form-control" />
                    </div>

                </div>


                <div class="form-group row">
                    <div class="col-md-2">
                        <label asp-for="Artist"></label>
                    </div>
                    <div class="col-md-10">
                        <input asp-for="Artist" disabled class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-2">
                        <label asp-for="QueryDate"></label>
                    </div>
                    <div class="col-md-10">
                        <input asp-for="QueryDate" disabled class="form-control" />
                    </div>
                </div>

                <div class="btn-block text-center">

                    <input type="submit" class="btn btn-danger" value="Delete" />
                    <a href='javascript:history.go(-1)' class="btn btn-outline-dark text-dark">Previous Page</a>
                    <a asp-controller="SongManager" asp-action="Index" class="btn btn-secondary">Back To Main Menu</a>

                </div>

            </div>

        </div>
    </div>

</form>

@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
    }

}