@model Song

<form method="post">
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="pl-3">Add Song To Database</h2>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group row">
                    <div class="col-md-1">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-md-11">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-md-1">
                        <label asp-for="Artist"></label>
                    </div>
                    <div class="col-md-11">
                        <input asp-for="Artist" class="form-control" />
                        <span asp-validation-for="Artist" class="text-danger"></span>
                    </div>
                </div>


                <div class="btn-block text-center">

                    <input type="submit" class="btn btn-primary" value="Create" />
                    <a href='javascript:history.go(-1)' class="btn btn-outline-dark text-dark">Previous Page</a>
                    <a asp-controller="SongManager" asp-action="Index" class="btn btn-secondary">Back To Main Menu</a>

                </div>

            </div>
        </div>
    </div>

</form>

@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
    }

}